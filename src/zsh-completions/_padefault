#compdef padefault

local -a commands
commands=(
  'volume-specific:set volume for specific application'
  'vs:set volume for specific application (alias)'
  'volume-focus:set volume for focused window'
  'vf:set volume for focused window (alias)'
  'toggle-focus:cycle audio device for focused window'
  'tf:cycle audio device for focused window (alias)'
  'toggle:cycle default audio output device'
  't:cycle default audio output device (alias)'
  'volume:set default audio output volume'
  'vol:set default audio output volume (alias)'
  'v:set default audio output volume (alias)'
  'mic-volume:set default microphone input volume'
  'mv:set default microphone input volume (alias)'
  'mute:toggle mute on default output device'
  'm:toggle mute on default output device (alias)'
  'mute-all:toggle mute on all output devices'
  'ma:toggle mute on all output devices (alias)'
  'mute-all-src:toggle mute on all input devices'
  'mas:toggle mute on all input devices (alias)'
  'help:display help information'
)

_arguments \
  '1:command:->command' \
  '*::arg:->args'

case $state in
  command)
    _describe 'padefault command' commands
    ;;
esac
