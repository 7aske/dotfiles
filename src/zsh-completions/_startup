#compdef startup

local -a commands
commands=(
  'stop:stop a running startup program'
  'start:start a startup program'
  'restart:restart a running startup program'
  'add:add new program to startup list'
  'remove:remove program from startup list'
  'list:list all configured startup programs'
)

_arguments \
  '1:command:->command' \
  '2::program name:'

case $state in
  command)
    _describe 'startup command' commands
    ;;
esac
