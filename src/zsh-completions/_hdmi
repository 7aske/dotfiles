#compdef hdmi

_arguments \
  '1:monitor state:((
    on\:"enable external monitor"
    off\:"disable external monitor"
  ))' \
  '2:xrandr positioning mode:((
    same-as\:"mirror primary display"
    left-of\:"position left of primary"
    right-of\:"position right of primary"
    above\:"position above primary"
    below\:"position below primary"
  ))'
