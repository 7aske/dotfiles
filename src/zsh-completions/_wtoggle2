#compdef wtoggle2

_arguments \
  '-a[set anchor point for position calculation]:anchor:(top-left top-center top-right center-left center-center center-right bottom-left bottom-center bottom-right tl tc tr cl cc cr bl bc br)' \
  '-d[set window dimensions (WIDTHxHEIGHT, supports %)]:size:' \
  '-f[enable fullscreen mode]' \
  '-h[show help and usage information]' \
  '-m[animate window from specified edge]:edge:(top left bottom right t l b r)' \
  '-o[pass extra options to terminal]:options:' \
  '-p[set window position in pixels (X,Y)]:position:' \
  '-s[specify screen identifier from xrandr]:screen:' \
  '-t[disable window toggle behavior]' \
  '-T[launch command in terminal (uses $TERMINAL)]' \
  '-v[enable verbose output for debugging]' \
  '-V[print version information]' \
  '-w[wait for keypress before closing terminal]' \
  '*:command to execute:'
