local colorsFile = '.conkycolors'

function file_exits(file)
    local f = io.open(file, "rb")
    if f then f:close() end
    return f ~= nil
end

function load_colors(file)
    if not file_exits(file) then
        print("'.conkycolors' not found")
    end
    for line in io.lines(file)do
        print(line)
        line = " "..line.."\n"
        for k, v in string.gmatch(line, "(%S-)=(%S-)\n") do
            conky.config[k] = v
        end
    end
end

